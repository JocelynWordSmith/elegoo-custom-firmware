# EditorConfig for consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# C++ files
[*.{cpp,hpp,c,h}]
indent_size = 2
max_line_length = 100

# CMake
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# XML files (launch, urdf, xacro)
[*.{xml,launch,urdf,xacro}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefile (must use tabs)
[Makefile]
indent_style = tab
